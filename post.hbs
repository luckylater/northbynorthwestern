{{!< default}}
<div class="article-page">
  <div class="article-page">
    <div class="nav-sidebar">
      {{#get "tags" limit="all"}}
        {{#foreach tags}}
          {{> "nav-sidebar-sections" }}
        {{/foreach}}
      {{/get}}
    </div>
  </div>
  {{#post}}
  <div class="article-container">
    {{#if feature_image}}
      <img src="{{feature_image}}" width="100%">
    {{/if}}
    <h1 class="title"> {{title}} </h1>
    <h3 class="byline"><a href={{author.url}}>{{author}},</a> {{author.location}} </h3>
    <h3 class="date"> {{date format='DD-MM-YYYY'}} </h3>
    <div class="article-body">
      <p> {{content}} </p>
    </div>
  </div>
  <div class="content-sidebar">
    <div class="related-content-sidebar">
        {{#get "posts" filter="authors:{{primary_author.slug}}+id:-{{id}}" limit='3'}}
        {{#foreach posts}}
          <div class="author-related-post">
            {{> "front-page-post-card"}}
          </div>
        {{/foreach}}
        {{/get}}
    </div>
  </div>
  {{/post}}
</div>
