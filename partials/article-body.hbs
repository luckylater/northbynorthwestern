<div class="article-header">
  <h1 class="post-title"> {{title}} </h1>
  {{#if authors}}
    <h3 class="byline">
    {{#foreach authors}}
      <h3 class="byline"><a target="_blank" href={{url}}>{{name}},</a> {{location}} </h3>
    {{/foreach}}
  {{else}}
    {{#author}}<h3 class="byline"><a target="_blank" href={{url}}>{{name}},</a> {{location}} </h3>{{/author}}
  {{/if}}
  <h3 class="date"> {{date published_at format='MMM. DD, YYYY'}} </h3>
</div>

<div class="article-body">
  {{content}}
</div>
